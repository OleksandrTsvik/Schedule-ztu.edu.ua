# EditorConfig: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = false

# Data files
[*.{json,xml,resx}]
indent_size = 2

# Markup files
[*.html]
indent_size = 2

# Stylesheets
[*.{css,scss}]
indent_size = 4

# JavaScript code
[*.{js,jsx,ts,tsx}]
indent_size = 2
insert_final_newline = true
